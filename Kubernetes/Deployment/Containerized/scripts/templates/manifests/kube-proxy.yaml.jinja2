apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: kube-proxy
  labels:
    k8s-app: kube-proxy
    version: v1
    kubernetes.io/cluster-service: "true"
spec:
  template:
    metadata:
      labels:
        k8s-app: kube-proxy
    spec:
      hostNetwork: true
      containers:
      - name: kube-proxy
        image: gcr.io/google_containers/kube-proxy:{{ K8S_VER }}
        command:
        - sh
        - -c
        - /usr/local/bin/kube-proxy --kubeconfig=/data/kubernetes/kubeconfig
          --cluster-cidr={{ POD_CIDR }}
          --v=5 1>>/data/log/kube-proxy.log 2>&1
        securityContext:
          privileged: true
        volumeMounts:
        - name: kubeconf
          mountPath: /data/kubernetes/kubeconfig
          readOnly: true
        - mountPath: /data/log/
          name: logfile
      volumes:
      - name: kubeconf
        hostPath:
          path: /data/kubernetes/kubeconfig
      - hostPath:
          path: /data/log/
        name: logfile
